<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/darken_white" />


    <item
        android:width="256dp"
        android:height="256dp"
        android:drawable="@drawable/koru_transparent"
        android:left="10dp"
        android:top="50dp" />

    <!-- gradual fade mask -->
    <item
        android:width="256dp"
        android:height="256dp"
        android:left="10dp"
        android:top="50dp">
        <shape>
            <gradient
                android:angle="315"
                android:endColor="@color/darken_white"
                android:startColor="@color/half_transparent_dark_white" />
        </shape>
    </item>

</layer-list>