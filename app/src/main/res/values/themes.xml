<resources>
    <!-- Base application theme. -->
    <style name="Theme.InformationApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/BasicButton</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <!-- basic style for all buttons, background will be set explicitly -->
    <style name="BasicButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/itim</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="shapeAppearance">@style/MyButtonShapeAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LanguageButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_yellow</item>
        <item name="fontFamily">@font/itim</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/MyButtonShapeAppearance</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- stylize buttons-->
    <style name="MyButtonShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- basic style for paragraph texts, color will be override by CDATA in string res -->
    <style name="BasicParagraph">
        <item name="android:padding">15dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/itim</item>
        <item name="android:textColor">@color/paragraph</item>
    </style>

    <style name="title_1">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/itim</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="title_2">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/itim</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>