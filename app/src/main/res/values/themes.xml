<resources>
    <!-- Base application theme. -->
    <style name="Theme.InformationApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/DefaultButton</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <!-- basic generic style for all buttons, background will be set explicitly -->
    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/itim</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="shapeAppearance">@style/RoundedButtonShapeAppearance</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LanguageButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/button_yellow</item>
        <item name="fontFamily">@font/itim</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/RoundedButtonShapeAppearance</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="HomeButton" parent="DefaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/button_blue</item>
    </style>

    <!-- stylize buttons radius-->
    <style name="RoundedButtonShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- basic style for paragraph texts, color will be override by CDATA in string res -->
    <style name="ParagraphText">
        <item name="android:padding">15dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/itim</item>
        <item name="android:textColor">@color/paragraph</item>
    </style>

    <!-- stylize text views -->
    <style name="GreyTitleText">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/itim</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="BlackTitleText">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/itim</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- stylize card views-->
    <style name="RoundedShadowCardView">
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="FragmentRootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/darken_white</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingLeft">@dimen/my_padding</item>
        <item name="android:paddingRight">@dimen/my_padding</item>
        <item name="android:paddingBottom">@dimen/my_padding</item>
        <item name="android:paddingTop">0dp</item>
    </style>
</resources>