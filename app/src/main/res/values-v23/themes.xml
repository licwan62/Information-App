<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.InformationApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/darken_white</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/DefaultButton</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="fontFamily">@font/itim</item>
    </style>
</resources>