<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darken_white"
    android:padding="@dimen/my_padding"
    tools:context=".ui.escort.EscortingFragment">

    <Button
        android:id="@+id/button_language"
        style="@style/LanguageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/button_yellow"
        android:text="@string/button_change_language" />

    <ScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_quiz"
        android:layout_below="@+id/button_language"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_view_paragraph"
            style="@style/BasicParagraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/escorting_paragraph" />

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/button_green"
        android:text="@string/button_start_quiz" />

</RelativeLayout>