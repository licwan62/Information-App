<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp">

        <TextView
            android:id="@+id/text_view_question"
            style="@style/title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="@string/test_long" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_question"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- TODO imp drawable structure-->

            <TextView
                android:id="@+id/text_view_user_answer"
                style="@style/title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Your answer: No" />

            <ImageView
                android:id="@+id/image_view_sign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                tools:src="@drawable/ic_cross" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_view_review"
            style="@style/title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout"
            android:textAlignment="center"
            tools:text="Correct Answer: Yes, explain answer...." />


    </RelativeLayout>

</androidx.cardview.widget.CardView>