<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/text_view_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="@string/test_long" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_question"
            android:layout_toStartOf="@id/image_view_sign"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_user_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                tools:text="Your answer: No" />

            <TextView
                android:id="@+id/text_view_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Correct Answer: Yes, explain answer...." />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_view_sign"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/linear_layout"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/button_no"
            tools:src="@drawable/ic_cross" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>